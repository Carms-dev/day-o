<div class="bg-devise">
  <div class="container">
    <div class="row">
      <class class="col-xs-12 display-devise">

        <h1 id='logo'>day<span class="iconify" id='logo' data-icon="vaadin:globe" data-inline="false"></span></h1>
        <p id='app-genre'>Climate Habit Builder</p>
        <h3 id='tagline'>Forgot your password?</h3>

        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :email,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Reset Password Now", class: 'btn btn-outline-warning' %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>

      </class>

    </div>
  </div>
</div>
