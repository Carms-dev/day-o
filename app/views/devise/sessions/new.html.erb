<div class="bg-devise">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 display-devise">

        <h1 id='logo'>day<span class="iconify" id='logo' data-icon="vaadin:globe" data-inline="false"></span></h1>
        <p id='app-genre'>Climate Habit Builder</p>
        <h3 id='tagline'>A Climate Battle We Can Win. Together.</h3>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, 'Get started >', class: 'btn btn-outline-warning' %>
          </div>
        <% end %>

        <p class='mt-2'>Haven't set up your account yet?</p>

        <%= render "devise/shared/links" %>

      </div>
    </div>
  </div>


</div>

