<h1>Categories</h1>

<%= form_tag challenges_path, method: :get do %>
  <%= text_field_tag :search,
    params[:search],
    class: "form-control",
    placeholder: "Find a Challenge"
  %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
<% end %> <br>

<p>Browse by Top Challenges</p>
<div class="card-challenge">
  <div><img src="https://res.cloudinary.com/dhc2cbdw0/image/upload/v1583440769/icons/info_y68o5y.svg" class="info"></div>
  <h5>Top 10 - 7 days challenges</h5>
  <p> 30 challenges</p>
</div>

<div class="card-challenge">
  <div><img src="https://res.cloudinary.com/dhc2cbdw0/image/upload/v1583440769/icons/info_y68o5y.svg" class="info"></div>
  <h5>Top 10 - 7 days challenges</h5>
  <p> 30 challenges</p>
</div>

<!-- dispalay each category as a link to the challenges -->
<p>Browse by categories</p>
<div class="card-container-categories">
  <% @categories.each do |c|  %>
    <!-- in the path will be the categorie id instead -->
    <%= link_to challenges_path(category_id: c.id ) do %>
      <div id="card-category-<%= c.name.downcase %>" class="card-categories">
        <img src="<%= c.icon %>" class="category-icon"> <br>
        <%= c.name %>
      </div>
    <% end %>
  <% end %>
</div>
