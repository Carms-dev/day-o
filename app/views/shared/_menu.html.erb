<% if controller_name == "pages" && action_name == "habit" %>
  <div class="menu-container">
    <div class="menu menu-addon">
      <div class="menu-top-section">
        <div class="menu-addon-left">
          <% if @num_habit_checked == 0 %>
            <p>No habits checked</p>
          <% elsif @num_habit_checked == @num_habit_checkable %>
            <p>All habits checked</p>
          <% else %>
            <p><%= @num_habit_checked %> out of <%= @num_habit_checkable %> habits checked</p>
          <% end %>


          <div class="progress" style="height: 8px;">
            <div class="progress-bar progress-bar-striped bg-success" role="progressbar" style="width: <%= @num_habit_checked.to_f / @num_habit_checkable *100 %>%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
          </div>
        </div>
        <% if @can_mass_create %>
          <%= link_to action_completions_mass_create_path, method: :post do %>
            <i id='addon-checkable' class="fas fa-check-circle"></i>
          <% end %>
        <% else %>
            <i id='addon-uncheckable' class="fas fa-check-circle"></i>
        <% end %>


      </div>
      <hr style= "width: 90%; text-align: center;">
      <ul class="icons">
        <%= link_to root_path do %>
          <span class="iconify" data-icon="mdi-light:home" data-inline="false"></span>
        <% end %>

        <%= link_to dashboard_path do %>
          <span class="iconify" data-icon="mdi-light:format-list-checks" data-inline="false"></span>
        <% end %>

          <%= link_to categories_path do %>
            <span class="iconify" data-icon="ei:search" data-inline="false"></span>
          <% end %>

          <%= link_to habit_path do %>
            <span class="iconify" data-icon="cil:calendar-check" data-inline="false"></span>
          <% end %>

          <!-- <span class="iconify" data-icon="ei:bell" data-inline="false"></span> -->

        <%  if current_user %>
          <%= link_to user_path(current_user.id) do %>
            <span class="iconify" data-icon="ei:user" data-inline="false"></span>
          <% end %>
        <% end %>
      </ul>
    </div>
  </div>

