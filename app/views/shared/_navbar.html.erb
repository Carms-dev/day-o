<!-- controller_name == 'pages'  -->

<% if (
    (controller_name == "categories" && action_name == "index") ||
    (controller_name == "challenges" && action_name == "index")
  )
%>
<!-- render search bar -->

<div class="nav-header">
  <%= link_to :back do %>
    <i class="fas fa-chevron-left"></i>
  <% end %>
  <!-- search-bar -->
  <%= form_tag challenges_path, method: :get, class: 'input-group' do %>
    <%= text_field_tag :search,
      params[:search],
      class: "form-control",
      placeholder: "Find a Challenge"
    %>
    <%= submit_tag "Search", class: "btn btn-light input-group-append" do %>
      <i class="fas fa-search"></i>
    <% end %>
  <% end %>
  <!-- 3 dots -->
  <div class="dropdown">
    <a href="#" data-toggle="dropdown"><i class="fas fa-ellipsis-v"></i></a>
    <div class="dropdown-menu dropdown-menu-right">
      <a class="dropdown-item" href="#">Settings</a>
      <%= link_to "Log Out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
    </div>
  </div>
</div>


<% elsif (
  (controller_name == "users" && action_name == "show") ||
  (controller_name == "sessions") ||
  (controller_name == "registrations")

) %>

<!-- render nothing -->

<% else %>

  <div class="nav-header">
    <%= link_to :back do %>
      <i class="fas fa-chevron-left"></i>
    <% end %>
    <h1><%= yield :title %></h1>
    <div class="dropdown">
      <a href="#" data-toggle="dropdown"><i class="fas fa-ellipsis-v"></i></a>
      <div class="dropdown-menu dropdown-menu-right">
        <a class="dropdown-item" href="#">Settings</a>
        <%= link_to "Log Out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
      </div>
    </div>
  </div>
<% end %>
